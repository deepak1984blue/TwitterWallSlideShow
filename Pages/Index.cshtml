@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link href="~/css/twitter.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>

<style type="text/css">
    #myCarousel.fullscreen {
        z-index: 9999;
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
    }

    #myCarousel {
        background: #f9423a;
        color: #fff;
        height: 800px;
    }

    .item {
        height: 800px;
        text-align: center;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#btnExpand').click(function (e) {
            $('#myCarousel').toggleClass('fullscreen');
        });
    });
</script>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.objectArray.ToArray().Length; i++)
        {
            <li data-target="#myCarousel" data-slide-to="@i" class='@(i==0?"active":"")'></li>
        }
    </ol>
    <div class="carousel-inner" role="listbox">
        @for (int i = 0; i < Model.objectArray.ToArray().Length; i++)
        {
            <div class="item @(i == 0 ? "active" : "")">
                @*<img src="~/images/temp.JPG" alt="ASP.NET" class="img-responsive" />*@
                <div class="carousel-caption" role="option">
                    <div class="media">
                        <a class="media-left" href='https://twitter.com/@Model.objectArray.ToArray()[i]["screenName"]'>
                            <img alt="" class="media-object img-rounded" src="@Model.objectArray.ToArray()[i]["user"]["profileImageUrl"]">
                        </a>
                        <div class="media-body">
                            <h4 class="media-heading">@Model.objectArray.ToArray()[i]["screenName"]</h4>
                            <p>@Model.objectArray.ToArray()[i]["text"]</p>
                            <ul class="nav nav-pills nav-pills-custom">
                                <li><a href="#"><span class="glyphicon glyphicon-share-alt"></span></a></li>
                                <li><a href="#"><span class="glyphicon glyphicon-retweet"></span></a></li>
                                <li><a href="#"><span class="glyphicon glyphicon-star"></span></a></li>
                                <li><a href="#"><span class="glyphicon glyphicon-option-horizontal"></span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row" style="padding-top:10px;padding-right:15px">
    <button id="btnExpand" type="button" class="btn btn-default pull-right"><i class="fa fa-fw fa-expand"></i> Expand</button>
</div>





